<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/progress_loading_color"
    />
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/primary"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
    >
        <LinearLayout
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
        >
            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/baseWhite"
                android:text="  赞"
            />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/baseWhite"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
        />
        <LinearLayout
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
        >
            <cn.edu.zju.qcw.android.base.widget.IconmoonTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/goods_detail_phone"
                android:textColor="@color/baseWhite"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/baseWhite"
                android:text="电话"
                android:layout_gravity="center"
            />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/baseWhite"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
        />
        <LinearLayout
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
        >
            <cn.edu.zju.qcw.android.base.widget.IconmoonTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/goods_detail_im"
                android:textColor="@color/baseWhite"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/baseWhite"
                android:text="消息"
                android:layout_gravity="center"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@id/actionBar"
    >

        <ScrollView
            tools:context="cn.edu.zju.qcw.papic.market.detail.GoodsDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            >
                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.stx.xhb.xbanner.XBanner
                        android:id="@+id/imageScrollView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_widthPercent="100%"
                        app:layout_aspectRatio="100%"
                        app:AutoPlayTime="3000"
                        app:pointNormal="@drawable/shape_noraml"
                        app:pointSelect="@drawable/shape_selected"
                        app:pointsPosition="CENTER"
                        app:tipTextSize="12sp"
                        app:isShowNumberIndicator="false"
                        app:pageChangeDuration="2000"
                    />
                </android.support.percent.PercentRelativeLayout>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="我是标题"
                    android:textSize="19sp"
                    android:padding="@dimen/activity_horizontal_margin"

                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                >
                    <ImageView
                        android:id="@+id/userHead"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                    />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                    >
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="username"
                        />
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#FFAAAAAA"
                            android:text="2017-05-14"
                        />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="17sp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:text="￥100"
                        android:gravity="end|center_vertical"
                    />
                </LinearLayout>
                <TextView
                    android:padding="@dimen/activity_horizontal_margin"
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/baseDarkGray"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="123123213123213"
                />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <cn.edu.zju.qcw.android.base.widget.TitleBar
        android:id="@+id/goods_detail_titlebar"
        android:layout_width="match_parent"
        android:background="@drawable/market_detail_titlebar_bg"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="详情"
        app:style="dark"
        app:hideLine="true"
    />

</RelativeLayout>

