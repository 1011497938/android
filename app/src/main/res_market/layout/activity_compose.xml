<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <cn.edu.zju.qcw.android.base.widget.TitleBar
        android:id="@+id/market_compose_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="发布"
        app:rightText="提交"
        app:style="light"
    />
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:id="@+id/titleInputLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/baseWhite"
        android:layout_below="@+id/market_compose_titlebar"
        android:gravity="center"
        android:hint=""
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="物品名称"
            android:background="@null"
        />
    </android.support.design.widget.TextInputLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleInputLayout"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:hint="描述"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:minLines="4"
        android:maxLines="4"
        android:background="@color/baseWhite"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/group_divider"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_below="@id/description"
    />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/images"
        android:layout_below="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:background="@color/baseWhite"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/baseWhite"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/addImg"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/compose_add_img"
            android:scaleType="centerCrop"
            />
        <EditText
            android:id="@+id/price"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:background="@drawable/border_price"
            android:layout_centerInParent="true"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:textSize="12sp"
            android:inputType="number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_toStartOf="@id/price"
            android:layout_alignBaseline="@id/price"
            android:textSize="12sp"
            android:layout_marginEnd="3dp"
        />
        <ImageView
            android:id="@+id/selectKind"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/compose_select_kind"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pickerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
    >
        <cn.edu.zju.qcw.android.base.widget.SQNumberPicker
            android:id="@+id/kindPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window_background"
        />
        <TextView
            android:id="@+id/kindCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignStart="@id/kindPicker"
            android:layout_alignTop="@id/kindPicker"
            android:textColor="@color/primary"
            android:padding="16dp"
        />
        <TextView
            android:id="@+id/kindConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_alignEnd="@id/kindPicker"
            android:layout_alignTop="@id/kindPicker"
            android:textColor="@color/primary"
            android:padding="16dp"
        />
    </RelativeLayout>

</RelativeLayout>
