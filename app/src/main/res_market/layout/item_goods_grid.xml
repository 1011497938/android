<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="false"
    android:background="@drawable/market_border_goods"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="100%"
            />

        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#374E60"
            android:text="听说标题要够15字？？？？？？?????"
            android:textSize="15sp"
            android:lines="2"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/article_padding"
            android:layout_marginRight="@dimen/article_padding"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">
            <cn.edu.zju.qcw.android.base.widget.IconmoonTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/market_like"
                android:gravity="bottom"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"
            />
            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
            />
            <cn.edu.zju.qcw.android.base.widget.IconmoonTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/market_see"
                android:textColor="#AAAAAA"
                android:gravity="bottom"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"
            />
            <TextView
                android:id="@+id/see"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
            />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:text="123"
            />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
