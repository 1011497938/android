<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <ImageView
        android:id="@+id/coverImg"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <ImageView
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient_live_mask"
        android:layout_alignBottom="@id/coverImg"
        android:visibility="gone"
    />
    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/coverImg"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/baseWhite"
        android:layout_marginBottom="15dp"
    />
    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/coverImg"
    >
        <ImageView
            android:id="@+id/ownerImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
        />
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:layout_toEndOf="@id/ownerImg"
            android:gravity="center"
            android:textColor="@color/baseBlack"
            android:layout_marginStart="10dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
        >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/live_see_24dp"
                android:layout_marginEnd="5dp"
            />
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#AAAAAA"
            />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_20"
        android:layout_below="@id/info"
    />

</RelativeLayout>
