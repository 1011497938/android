<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/safari_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:overScrollMode="never"
    >

        <cn.edu.zju.qcw.android.base.widget.TitleBar
            android:id="@+id/safari_titlebar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:minHeight="25dp"
            app:titleText="发现"
            app:rightText="@string/icon_search"
            app:leftIcon="@string/icon_user"
            app:style="dark"
            app:layout_scrollFlags="scroll|enterAlways|exitUntilCollapsed"
        />

        <RelativeLayout
            android:id="@+id/clubBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
        >
            <cn.edu.zju.qcw.android.base.widget.PapicTabLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/safari_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_height"
                android:clipToPadding="false"
                android:background="@color/baseWhite"
                android:paddingStart="4dp"
                android:paddingEnd="44dp"
                app:stl_defaultTabTextColor="@drawable/safari_tab_text_color"
                app:stl_defaultTabTextHorizontalPadding="18dp"
                app:stl_dividerColor="@color/transparent"
                app:stl_dividerThickness="0dp"
                app:stl_indicatorGravity="bottom"
                app:stl_indicatorColor="@color/primary"
                app:stl_indicatorInterpolation="linear"
                app:stl_indicatorThickness="2.5dp"
                app:stl_underlineThickness="1px"
                app:stl_underlineColor="@color/transparent"
                app:stl_distributeEvenly="true"
                app:stl_indicatorWidth="auto"
                app:stl_indicatorWithoutPadding="true"
                android:overScrollMode="never"
            />

            <LinearLayout
                android:id="@+id/safari_search_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_height"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/baseWhite"
                android:gravity="center_vertical"
            >
                <cn.edu.zju.qcw.android.base.widget.IconTextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="@string/icon_search"
                    android:textColor="@color/black_30"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                />
                <EditText
                    android:id="@+id/safari_search_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="搜索组织、社团"
                    android:textSize="15sp"
                    android:background="@null"
                    android:textColorHint="@color/black_30"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                />

            </LinearLayout>

            <cn.edu.zju.qcw.android.base.widget.IconTextView
                android:id="@+id/safari_showclub_icon"
                android:layout_width="44dp"
                android:layout_height="@dimen/tabbar_height"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:background="@color/baseWhite"
                android:text="@string/icon_manage"
                android:textColor="@color/baseLightGray"
                android:textSize="20dp"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#26000000"
                android:layout_alignParentBottom="true"
            />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:id="@+id/safari_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
        <include
            android:id="@+id/safari_loading"
            layout="@layout/recyclerview_loading"
        />
        <include
            android:id="@+id/safari_error"
            layout="@layout/recyclerview_error"
            android:visibility="gone"
        />
        <android.support.v4.view.ViewPager
            android:id="@+id/safari_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/club_list_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/baseLightGray"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/club_recycler_view"
                android:background="@color/baseWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>