<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <View
        android:id="@+id/common_titlebar_status_bg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_titlebar_status_bg"
    >
        <cn.edu.zju.qcw.android.base.widget.IconTextView
            android:id="@+id/common_titlebar_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/common_titlebar_bottom_line"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:textSize="10dp"/>

        <RelativeLayout
            android:id="@+id/common_titlebar_left_image"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_above="@+id/common_titlebar_bottom_line"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
        >
            <ImageView
                android:id="@+id/common_titlebar_left_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:background="@drawable/border_safari_titlbar_user_head"
            />
        </RelativeLayout>


        <cn.edu.zju.qcw.android.base.widget.IconTextView
            android:id="@+id/common_titlebar_left_close_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/common_titlebar_bottom_line"
            android:layout_toEndOf="@+id/common_titlebar_left_icon"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:text="@string/icon_close"
            android:textSize="13dp"
            android:visibility="gone"/>

        <cn.edu.zju.qcw.android.base.widget.IconTextView
            android:id="@+id/common_titlebar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/common_titlebar_bottom_line"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <cn.edu.zju.qcw.android.base.widget.IconTextView
            android:id="@+id/common_titlebar_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/common_titlebar_bottom_line"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
        />

        <View
            android:id="@+id/common_titlebar_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_titleBar_light_line"/>
    </RelativeLayout>

    <View
        android:id="@+id/common_titlbar_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
    />
</RelativeLayout>