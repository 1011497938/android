<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <cn.edu.zju.qcw.android.base.widget.TitleBar
        android:id="@+id/parttime_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="兼职"
        app:rightText="报名"
        app:leftIcon=""
        app:style="dark"
        app:layout_scrollFlags="scroll|enterAlways"
    />

    <cn.edu.zju.qcw.android.base.widget.PapicTabLayout
        android:id="@+id/parttime_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_height"
        android:clipToPadding="false"
        android:background="@color/baseWhite"
        app:stl_defaultTabTextColor="@drawable/safari_tab_text_color"
        app:stl_defaultTabTextHorizontalPadding="18dp"
        app:stl_dividerColor="@color/transparent"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/primary"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="2.5dp"
        app:stl_underlineThickness="0.5dp"
        app:stl_underlineColor="@color/common_titleBar_light_line"
        app:stl_distributeEvenly="true"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorWithoutPadding="true"
        android:overScrollMode="never"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
        <android.support.v4.view.ViewPager
            android:id="@+id/parttime_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>