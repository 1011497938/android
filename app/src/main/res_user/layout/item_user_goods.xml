<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
        />


        <TextView
            android:id="@+id/title"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#374E60"
            android:text="听说标题要够15字？？？？？？?????"
            android:textSize="17sp"
            android:lines="2"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/article_padding"
            android:layout_marginRight="@dimen/article_padding"
            android:layout_toEndOf="@id/image"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <cn.edu.zju.qcw.android.base.widget.IconmoonTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/market_like"
                android:gravity="bottom"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"
            />
            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
            />
            <cn.edu.zju.qcw.android.base.widget.IconmoonTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/market_see"
                android:textColor="#AAAAAA"
                android:gravity="bottom"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"
            />
            <TextView
                android:id="@+id/see"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
            />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:text="123"
            />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_20"
    />

</LinearLayout>
