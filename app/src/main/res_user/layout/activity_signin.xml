<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
>
    <ScrollView
        android:id="@+id/imgScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadingEdge="none"
    >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/sign_in_bg"
            android:scaleType="centerCrop"
        />
    </ScrollView>
    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="80%"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
        >
            <View
                android:id="@+id/phoneBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/phoneLayout"
                android:layout_alignBottom="@id/phoneLayout"
                android:background="@drawable/sign_in_onfocus_bg"
                android:alpha="0"
            />
            <View
                android:id="@+id/verifyBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/verifyLayout"
                android:layout_alignBottom="@id/verifyLayout"
                android:background="@drawable/sign_in_onfocus_bg"
                android:alpha="0"
            />

            <android.support.design.widget.TextInputLayout
                android:id="@id/phoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:hint=""
                android:background="@drawable/border_signin"
                android:focusable="true"
                android:focusableInTouchMode="true"
            >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/phoneNum"
                    android:hint="手机号"
                    android:textColor="#333"
                    android:textCursorDrawable="@null"
                    android:textColorHint="@color/baseWhite"
                    android:drawableStart="@drawable/sign_in_mobile_white"
                    android:theme="@style/MyEditText"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@id/verifyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/phoneLayout"
            >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    android:hint=""
                    android:background="@drawable/border_signin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/verifyNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="验证码"
                        android:theme="@style/MyEditText"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/baseWhite"
                        android:textColorHint="@color/baseWhite"
                        android:drawableStart="@drawable/sign_in_verify_white"
                        android:textSize="15sp"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/verifyNumBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/transparent"
                    android:text="获取"
                    android:textColor="@color/baseWhite"
                    android:layout_centerVertical="true"
                    android:paddingEnd="10dp"
                />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/signinBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/verifyLayout"
                android:background="@drawable/border_signin"
                android:layout_marginTop="10dp"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textColor="@color/baseWhite"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.percent.PercentFrameLayout>


</FrameLayout>
