<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
>
    <cn.edu.zju.qcw.android.base.widget.TitleBar
        android:id="@+id/settings_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleText="设置"
        app:style="dark"
    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/group_gray"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@color/baseWhite"
        >
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/group_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/settings_header_height"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="系统设置"
                android:textColor="@color/black_30"
                android:textSize="12sp"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/group_divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_cell_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="推送开关"
                    android:textColor="@color/baseBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                />
                <Switch
                    android:id="@+id/pushSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:gravity="center|end"
                />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/group_divider"/>
            <RelativeLayout
                android:id="@+id/clearCache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_cell_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="清理缓存"
                    android:textColor="@color/baseBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                />
                <TextView
                    android:id="@+id/cacheSize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_alignParentEnd="true"
                    android:text="5.14M"
                />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/group_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/settings_header_height"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="其它"
                android:textColor="@color/black_30"
                android:textSize="12sp"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/group_divider"/>
            <RelativeLayout
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_cell_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="意见反馈"
                    android:textColor="@color/baseBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                />
                <cn.edu.zju.qcw.android.base.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/icon_more_left"
                    android:textColor="@color/baseLightGray"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/group_divider"/>
            <RelativeLayout
                android:id="@+id/wechat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_cell_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="关注微信"
                    android:textColor="@color/baseBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                />
                <cn.edu.zju.qcw.android.base.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/icon_more_left"
                    android:textColor="@color/baseLightGray"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/group_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/settings_header_height"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="关于"
                android:textColor="@color/black_30"
                android:textSize="12sp"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/group_divider"/>
            <RelativeLayout
                android:id="@+id/homePage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_cell_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="访问勤创网"
                    android:textColor="@color/baseBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                />
                <cn.edu.zju.qcw.android.base.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/icon_more_left"
                    android:textColor="@color/baseLightGray"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/group_divider"/>
            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_cell_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="关于"
                    android:textColor="@color/baseBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                />
                <cn.edu.zju.qcw.android.base.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/icon_more_left"
                    android:textColor="@color/baseLightGray"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/group_divider"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>